<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_home_top"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_toLeftOf="@id/ll_setting_bookmark"
                android:fontFamily="@font/source_sans_pro_bold"
                android:text="Hello!"
                android:textColor="?android:attr/colorPrimary"
                android:textSize="24dp" />
            <LinearLayout
                android:id="@+id/ll_setting_bookmark"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_settings"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/settings"/>
                <ImageView
                    android:id="@+id/iv_bookmark"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/bookmark"/>
            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@id/rl_home_top"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_fragment_home_scholarship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/rl_fragment_home_scholarship"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:id="@+id/tv_fragment_home_text_scholarship"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scholarship"
                            android:textSize="17sp"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/source_sans_pro_bold"/>
                        <TextView
                            android:id="@+id/tv_see_all_scholarship"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See all"
                            android:textSize="15sp"
                            android:textColor="?android:attr/colorPrimary"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/source_sans_pro_semibold"/>
                    </RelativeLayout>
                    <include
                        android:id="@+id/item_layout_scholarship"
                        layout="@layout/item_organization_layout"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_fragment_home_tips"
                    android:layout_below="@id/ll_fragment_home_scholarship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/rl_fragment_home_tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:id="@+id/tv_fragment_home_text_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tips and Tricks"
                            android:textSize="17sp"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/source_sans_pro_bold"/>
                        <TextView
                            android:id="@+id/tv_see_all_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See all"
                            android:textSize="15sp"
                            android:textColor="?android:attr/colorPrimary"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/source_sans_pro_semibold"/>
                    </RelativeLayout>
                    <include
                        android:id="@+id/item_layout_tips"
                        layout="@layout/item_tips_trick"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_fragment_home_recommendation"
                    android:layout_below="@id/ll_fragment_home_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/rl_fragment_home_recommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:id="@+id/tv_fragment_text_recommendation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recommendation"
                            android:textSize="17sp"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/source_sans_pro_bold"/>
                        <TextView
                            android:id="@+id/tv_see_all_recommendation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See all"
                            android:textSize="15sp"
                            android:textColor="@color/primary_light"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/source_sans_pro_semibold"/>
                    </RelativeLayout>
                    <include
                        android:id="@+id/item_layout_recommendation"
                        layout="@layout/item_organization_layout"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</FrameLayout>